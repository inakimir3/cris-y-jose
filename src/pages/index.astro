---
import Header from '../components/Header.astro';
import Layout from '../layouts/Layout.astro';
import Form from '../components/Form.astro';
import Carousel from '../components/Carousel.astro';
import Cards from '../components/Cards.astro';
import Plane from '../components/Plane.astro';
---

<Layout>
	<Header />
	<section class="w-full flex justify-center items-center">
		<img src="./images/DSC_8287.webp" alt="Imagen de Cris y Jose" class="w-[90%] lg:w-[75%] aspect-[16/9] object-cover" />
	</section>
	<section class="w-full px-5 py-10 lg:py-24 font-inter font-light tracking-tighter text-center items-center flex flex-col gap-10 justify-center">
		<p class="text-[32px] lg:text-[64px] font-infant font-normal max-w-[1150px] leading-none text-center">Después de muchos años de amor, complicidad y mil aventuras compartidas...</p>
		<p class="text-[16px] lg:text-[32px] max-w-[800px] text-center">Nos hace especial ilusión invitaros a formar parte de uno de los días más mágicos de nuestra vida.</p>
	</section>
	<Plane />
	<Cards />
	<section class=" py-5 lg:py-24 flex flex-col items-center justify-center gap-2">
		<p class=" font-infant text-[32px] lg:text-[108px] flex items-center justify-center text-center">07/12/25</p>
		<p class=" font-infant text-[16px] lg:text-[32px] flex items-center justify-center text-center">Nos reuniremos a las 12:00 en la finca Son Termes</p>
	</section>
	<Carousel />
	<Form />
	<section class="w-full flex flex-col items-center justify-center pb-10 lg:pb-20 gap-5 lg:gap-10">
		<p class="font-infant text-[48px] lg:text-[88px] py-10 lg:py-20 text-center">¡Os esperamos!</p>
		<img src="./images/DSC_9649.webp" class="w-[90%] aspect-[16/8] object-cover" alt="Imagen de Cris y Jose" />
	</section>
</Layout>
